<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".anotherHomeActivity.socialMedia.SocialMediaActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/follow_us_facebook_id"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="fill"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables"
            android:weightSum="10">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="50dp"
                android:padding="10dp"
                android:src="@drawable/icon_facebook"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:text="Facebook Page"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/purple_500"
                android:paddingStart="10dp"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/follow_us_Website"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="fill"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables"
            android:weightSum="10">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="50dp"
                android:padding="10dp"
                android:src="@drawable/icon_website_2"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:text="Website"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/purple_500"
                android:paddingStart="10dp"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/follow_us_email"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="fill"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables"
            android:weightSum="10">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="50dp"
                android:padding="10dp"
                android:src="@drawable/icon_mail"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/purple_500"
                android:paddingStart="10dp"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/follow_us_meetUp"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="fill"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables"
            android:weightSum="10">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="50dp"
                android:padding="10dp"
                android:src="@drawable/meetup_logo"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:text="Meet Up"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/purple_500"
                android:paddingStart="10dp"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>